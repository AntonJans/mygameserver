[Unit]
Description=CTF Checker Runner
Description=CTF Flag-Submission Service
Wants=postgresql.service
After=postgresql.service

[Service]
Type=notify
ExecStart=/usr/bin/ctf-checkermaster --config /etc/ctf-gameserver/%i.conf --loglevel DEBUG
ExecStop=/bin/kill -usr1 $MAINPID
WatchdogSec=20
Restart=on-failure
TimeoutStopSec=65
Environment=PYTHONPATH=/etc/ctf-gameserver/checker
User=nobody
Group=nogroup

[Install]
WantedBy=multi-user.target
